{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}

    <h1 class="h3 mb-4 text-gray-800">Kunden</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a href="{{ path('customer_new') }}" class="btn btn-success btn-sm btn-icon-split">
                <span class="icon text-white-50"><i class="fas fa-plus"></i></span>
                <span class="text">Neuer Kunde</span>
            </a>
        </div>
        <div class="card-body">
            <table class="table" id="dataTable">
                <thead>
                <tr>
                    <th>Nachname</th>
                    <th>Vorname</th>
                    <th>E-Mail</th>
                    <th>Telefon</th>
                    <th>Mobil</th>
                    <th>Stra√üe</th>
                    <th>PLZ</th>
                    <th>Stadt</th>
                    <th>Geburtstag</th>
                    <th>Optionen</th>
                </tr>
                </thead>
                <tbody>
                {% for customer in customers %}
                    <tr>
                        <td>{{ customer.lastname }}</td>
                        <td>{{ customer.firstname }}</td>
                        <td>{{ customer.email }}</td>
                        <td>{{ customer.phone }}</td>
                        <td>{{ customer.mobile }}</td>
                        <td>{{ customer.street }}</td>
                        <td>{{ customer.zip }}</td>
                        <td>{{ customer.city }}</td>
                        <td>{{ customer.birthday ? customer.birthday|date('d.m.Y') : '' }}</td>
                        <td>
                            <a href="{{ path('customer_show', {'id': customer.id}) }}" class="btn btn-info btn-sm btn-icon-split">
                                <span class="icon text-white-50"><i class="fas fa-info-circle"></i></span>
                                <span class="text">Details</span>
                            </a>
                            <a href="{{ path('customer_edit', {'id': customer.id}) }}" class="btn btn-warning btn-sm btn-icon-split">
                                <span class="icon text-white-50"><i class="fas fa-edit"></i></span>
                                <span class="text">Bearbeiten</span>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="13">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
{% endblock %}
